<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_bg"
    android:orientation="horizontal"
    android:paddingLeft="8dp" >

    <ImageView
        android:id="@+id/img1"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bosslogo" />

<LinearLayout 
    android:id="@+id/l1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="20dip"
    android:background="#ffffff"
    android:layout_below="@id/img1"
    >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Together E-marketing"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
      
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="App version: 2.0.01"
        android:gravity="center_horizontal"
       
       />
    
    <TextView
      
         android:layout_marginTop="10dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Support"
        android:gravity="center_horizontal"
        android:textColor="#000000"
       
       />
    <TextView
      
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="info@togetherpro.com"
        android:gravity="center_horizontal"
        android:onClick="email"
        android:clickable="true"
       />
    <TextView
      
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="tel: +20111-1133-657"
        android:gravity="center_horizontal"
        android:onClick="phone"
         android:clickable="true"
       
       />
    <TextView
      
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/web"
        android:gravity="center_horizontal"
        android:onClick="web"
         android:clickable="true"
       
       />
    
</LinearLayout>


<LinearLayout 
    android:id="@+id/l12"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="20dip"
    android:layout_below="@id/l1"
    android:background="#ffffff"
   
    
    >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Services"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
      
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sss"
        android:layout_marginTop="5dip"
        android:layout_gravity="center_horizontal"
        android:gravity="left"
        
       
       />
    

    
</LinearLayout>
</RelativeLayout>